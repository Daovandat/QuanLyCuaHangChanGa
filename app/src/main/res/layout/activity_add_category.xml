<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.AddCategoryActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_addcategory_back"
            android:layout_width="wrap_content"
            android:background="@drawable/bogoc"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:padding="5dp"
            />
        <TextView
            android:layout_gravity="center"
            android:id="@+id/txt_addcategory_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm loại hàng"
            android:layout_weight="1"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/baloo2_semibold"
            android:textColor="@color/black"
            android:textAllCaps="true"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:layout_marginTop="50dp"
        >

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtl_addcategory_TenLoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Nhập tên loại"
            app:hintTextColor="@color/black"
            app:boxStrokeColor="@color/black"
            app:boxStrokeWidthFocused="2dp"
            app:startIconDrawable="@drawable/ic_baseline_airline_seat_legroom_normal_24"
            app:endIconTint="@color/black"
            app:endIconMode="clear_text"
            android:layout_marginBottom="20dp"
            android:textColorHint="@color/black"
            app:startIconTint="@color/black"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:fontFamily="@font/baloo2_semibold"
                android:inputType="text"

                />
        </com.google.android.material.textfield.TextInputLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="25dp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_addcategory_ThemHinh"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:src="@drawable/changa" />
        </androidx.cardview.widget.CardView>


        <android.widget.Button
            android:id="@+id/btn_addcategory_TaoLoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bogoc"
            android:backgroundTint="@color/colorPrimaryDark"
            android:elevation="5dp"
            android:textSize="20dp"
            android:text="Thêm Loại"
            android:textColor="@color/white"
            app:backgroundTint="@color/black"
            />

    </LinearLayout>
</LinearLayout>